@model ITAcademy.TaskTwo.Web.ViewModels.PhoneVM.PhoneDelete
@section Title
{
    Удалить номер телефона из базы - ITAcademy.TaskTwo.Web
}
<h4>Удаление номера телефона из базы</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Номер телефона</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>
    <form asp-controller="Phone" asp-action="Delete" 
          asp-route-id="@Model.Id" asp-route-method="@Model.Method" 
          method="post" class="btn-inline">
        <input type="submit" value="Удалить" />&nbsp; &nbsp;
    </form>
    @if (Model.Method == "Edit")
    {
        <form asp-controller="Employee" asp-action="Edit" 
              asp-route-id="@Model.EmployeeId" 
              method="get" class="btn-inline">
            <input type="submit" value="Отмена" />
        </form>
    }
    else
    {
        <form asp-controller="Phone" asp-action="Index" 
              asp-route-id="@Model.EmployeeId" 
              method="get" class="btn-inline">
            <input type="submit" value="Отмена" />
        </form>
    }
</div>