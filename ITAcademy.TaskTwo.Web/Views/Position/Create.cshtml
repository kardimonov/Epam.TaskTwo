@model ITAcademy.TaskTwo.Web.ViewModels.PositionVM.PositionCreate
@section Title
{
    Добавление новой должности - ITAcademy.TaskTwo.Web
}
<h4>Добавление новой должности</h4>
<br />
<form asp-action="Create" asp-controller="Position" method="post">
    <div asp-validation-summary="ModelOnly" class="validation"></div>
    <p>
        <label asp-for="Name" class="required"></label><br />
        <input asp-for="Name" class="col-sm-5" />
        <span asp-validation-for="Name"></span><br />
    </p>
    <p>
        <label asp-for="MaxNumber" class="required"></label><br />
        <input asp-for="MaxNumber" class="col-sm-5" min="1" />
        <span asp-validation-for="MaxNumber"></span><br />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>
<p class="text-small"><font class="required">&nbsp;</font> - поле обязательное для заполнения</p>
<hr />
<a asp-controller="Position" asp-action="Index">Вернуться к списку должностей</a>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}